<div class="col-7 ml-auto mr-auto mt-5">
    <form action="/record" method="POST" style="width: 80%;" class="m-auto">
        <div>
            <h6>*必填欄位</h6>
            <div style="text-align: center;">
                <h3>請輸入你的支出</h3>
            </div>
        </div>
        <div>
            <label for="name">名稱* :</label>
            <input type="text" name="name" id="name" class="form-control" required>
        </div>
        <div class="mt-3">
            <label for="name_en">日期* :</label>
            <input type="date" name="date" id="date" class="form-control" required>
        </div>
        <div class="mb-3 mt-3">
            <label for="category">類別* :</label>
            <select class="form-select mt-2" style="width: 100%;" aria-label="Default select example" style="width: 500px;" name="category" id="category"  required>
                <option value='' selected>類別</option>
                {{#each categories}}
                <option value="{{this._id}}">{{this.categoryName}}</option>
                {{/each}}
            </select>
        </div>
        <div class="mb-3 mt-3">
            <label for="category">金額* :</label>
            <input type="text" name="amount" id="amount" class="form-control" required>
        </div>
        <div class="mt-3 mb-3">
            <div class=" d-flex justify-content-center align-items-center">
                <button type="submit" class="btn btn-primary">新增支出</button>
            </div>
        </div>
    </form>
</div>